<div class = "bigContainer">
    <h1>Season: {{index.[0].season}}</h1>

    {{#each index}}

    <div class="card">
        <img src="{{this.image_url}}" alt="Avatar" style="width:100%;; height:266px;">
        <div class="container">
            <h4>
                <div class="header">
                    <span>{{this.title}}</span>
                </div>
                <div class="content">
                    <p>Episode Number: {{this.number_in_season}}</p>
                    <p>Viewers: {{this.us_viewers_in_millions}} (mil)</p>
                    <p>Rating: {{this.imdb_rating}}</p>
                    <p><a href="/season/{{this.season}}/{{this.production_code}}">click for more info</a></p>
                </div>
            </h4>
        </div>
    </div>

    {{/each}}
</div>

<style>

body{
    background-color: #1A82BB;
}
.bigContainer{
    font-family: 'Heebo', sans-serif;
    margin-top: 0;
    background-color:#1A82BB !important;
    color: #FFD90F;
    text-align: center;
}

.card {
    width: 29%;
    height: 40%;
    display: inline-block;
    float: left;
    overflow: auto;
    vertical-align: top;
    margin: 2%;
    margin-bottom: 5%;
    border-style: solid;
    border-width: 2px;
    border-color: #303030;
    text-align: center;
    background-color:#774F98;
    overflow: visible;
}

.card:hover {
    box-shadow: 4px 4px 4px 4px rgba(0,0,0,0.2);
}
html{
    background-color: blue important;
}
h1 {
    font-size: 600%;
    margin-top: 0;
    margin-bottom: 0;
    padding-top: 1%;
}
</style>

<script>
    $(document).ready(function () {

            $(".content").hide();

            $(".header").click(function () {
                $header = $(this);
                $content = $header.next();
                $content.slideToggle(500, function () {
                })
            })
        });
</script>