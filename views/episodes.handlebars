<div class='episodes'>
    {{#each episodes}}
        
        <div class = 'title'>
            <h1>{{this.title}}</h1>
        </div>

        <div class="big" style="background-image: url('{{this.image_url}}')">
        <!--big picture-->
        </div>

        <div class="details">
            <h2>Season: {{this.season}}, Episode: {{this.number_in_season}}</h2>
            <table>
                <thead>
                    <tr>
                        <th>Air Date</th>
                        <th>Production Code</th>
                        <th>Series</th>
                        <th>Viewers</th>
                        <th>Rating</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{this.original_air_date}}</td>
                        <td>{{this.production_code}}</td>
                        <td>{{this.number_in_series}}</td>
                        <td>{{this.us_viewers_in_millions}}(mil)</td>
                        <td>{{this.imdb_rating}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    {{/each}}

</div>

<style>
    .episodes {
        font-family: 'Heebo', sans-serif;
        background-color: #1A82BB;
        color: #FFD90F;
        text-align: center;
        border-style: solid;
        border-color: #303030;
        border-width: 10px;
        border-radius: 5px;
    }
    h1{
        font-size: 600%;
        margin-top: 0;
        margin-bottom: 0;
        padding-top: 1%;

    }
    .big{
        height: 600px;
        width: 100%;
        border-left: none;
        border-left-width: 0px;
        border-right: none;
        border-right-width: 0px;
        border-top-color:#774F98;
        border-top-width: 10px;
        border-bottom-color: #FFD90F;
        border-bottom-width: 10px;
        border-style: solid;
    }
    p{
        margin-top: 0;
    }
    .details{
        margin-top: 0;
        height: 250px;
    }
    table{
        table-layout: auto;
        border-collapse: collapse;
        width: 40%;
        height: 20%;
        margin-left: 30%;
    }
    table, tr, th, td{
        text-align: center;
        border-style: solid;
        border: 5px;
        border-color: #774F98;
    }

    td, th{
        border-style: solid;
    }
</style>